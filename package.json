{
  "name": "zotero-publications",
  "license": "AGPL-3.0",
  "version": "0.6.2",
  "description": "Library to display \"My Publications\" from Zotero in a user friendly way.",
  "repository": "https://github.com/zotero/publications.git",
  "main": "lib/js/main.js",
  "browserslist": [
    "last 2 versions",
    "not dead"
  ],
  "scripts": {
    "build": "run-s \"build:all\" \"build:postprocess\"",
    "build:all": "run-p 'build:js -s' 'build:scss -s' 'build:html -s'",
    "build:html": "mkdir -p build/ && rsync -vazL src/html/* build/",
    "build:js": "mkdir -p build/static && NODE_ENV=production browserify -s ZoteroPublications  src/js/main.js -t [babelify] -g uglifyify | terser --compress --mangle > build/static/zotero-publications.js",
    "build:postprocess": "postcss build/static/zotero-publications.css --use autoprefixer --no-map -r",
    "build:scss": "for f in src/scss/*.scss; do node-sass --include-path ./node_modules/ $f --output-style compressed --output build/static/; done;",
    "lib:js": "mkdir -p lib/js && babel src/js/ -d lib/js",
    "lib:scss": "rsync -zarv --include=\"*/\" --include=\"*.scss\" --exclude=\"*\" src/scss lib",
    "lib:third-party-scss": "rsync -zarvm --include=\"*/\" --include=\"*.scss\" --exclude=\"*\" node_modules/primer* lib/scss",
    "lib:all": "mkdir -p lib/scss && run-p \"lib:js\" \"lib:scss\" \"lib:third-party-scss\"",
    "dist": "mkdir -p dist && cp build/static/zotero-publications.js dist/zotero-publications.min.js && cp build/static/zotero-publications.css dist/zotero-publications.min.css",
    "clean": "rimraf build lib",
    "devel:js": "NODE_ENV=development watchify -s ZoteroPublications src/js/main.js -d -v -t [babelify] -o build/static/zotero-publications.js",
    "devel:scss": "nodemon -q -w src/scss --ext 'scss' --exec 'npm run devbuild:scss'",
    "devel:html": "nodemon -q -w src/html -w config --ext '.' --exec 'npm run build:html'",
    "devbuild:scss": "run-s devbuild:scss:build devbuild:scss:post",
    "devbuild:scss:build": "for f in src/scss/*.scss; do node-sass --include-path ./node_modules/ $f  --recursive --source-map true --source-map-contents true --output build/static; done;",
    "devbuild:scss:post": "postcss build/static/*.css --use autoprefixer -r",
    "devel": "run-p 'devel:js -s' 'devel:scss -s' 'devel:html -s'",
    "start": "run-p \"serve -s {@}\" \"devel -s {@}\"",
    "prepack": "run-s build dist \"lib:all\"",
    "postpack": "rimraf lib dist",
    "test": "karma start",
    "serve": "serve -l 8001 build",
    "eslint": "eslint \"src/js/**/*.js\" || true",
    "test-once": "karma start --single-run"
  },
  "files": [
    "dist/*",
    "lib/*"
  ],
  "dependencies": {
    "balanced-match": "^1.0.0",
    "clipboard": "^2.0.6",
    "core-js": "^3.6.5",
    "cross-fetch": "^3.0.5",
    "es6-symbol": "^3.1.3",
    "lodash": "^4.17.20",
    "primer-tooltips": "^2.0.0",
    "regenerator-runtime": "^0.13.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.5",
    "@babel/core": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "autoprefixer": "^9.8.6",
    "babel-eslint": "^10.1.0",
    "babelify": "^10.0.0",
    "browserify": "^16.5.2",
    "browserify-istanbul": "^3.0.1",
    "eslint": "^7.8.0",
    "jasmine-core": "^3.6.0",
    "karma": "^6.3.14",
    "karma-babel-preprocessor": "^8.0.1",
    "karma-browserify": "^7.0.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-coveralls": "^2.1.0",
    "karma-firefox-launcher": "^1.3.0",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-matchers": "^4.0.2",
    "karma-source-map-support": "^1.4.0",
    "node-sass": "^4.14.1",
    "node-underscorify": "0.0.14",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.2",
    "rimraf": "^3.0.2",
    "run-sequence": "^2.2.1",
    "serve": "^11.3.2",
    "terser": "^5.2.1",
    "uglifyify": "^5.0.2",
    "watchify": "^3.11.1"
  }
}
